<h1>All Posts</h1>
<br />
<% if @posts.empty? %>
  <h2>There are no posts yet. Please <%= link_to 'create', new_post_path %> one!</h2>
<% else %>
  <div class="row">
    <% @posts.each do |post| %>
    <div class="span12">
      <h2>Author: <%= link_to post.user.name, post.user %></h2>
      <h2>Title: <%= link_to post.title, post %></h2>
      <p><%= post.content%></p>
      <h6>
        Posted: <%= post.created_at %>
        <%= link_to 'Detailed ', post %>
        <%= link_to 'Comment ', post %>
      </h6><br />
    </div>
    <% end %>
  </div> 	
<% end %>

