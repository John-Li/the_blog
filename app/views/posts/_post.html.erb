<tr>
  <td class="micropost">
    <span class="title"><%= post.title %></span><br />
    <span class="content"><%= post.content %></span><br />
    <span class="timestamp">Posted <%= post.created_at%></span>
  </td>	
  <% if current_user?(post.user) %>
  <td>
    <%= link_to 'edit', edit_post_path %>
    <%= link_to 'delete', post, method: :delete, confirm: "You shure?"%>
  </td>
  <% end %>
</tr>