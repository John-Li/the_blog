<div class="row">
  <div class="span9">
    <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <p><h6>Posted <%= post.created_at%></h6>
      <% if current_user?(post.user) %>
        <%= link_to 'edit', edit_post_path(post), class: "btn btn-primary" %>
        <%= link_to 'delete', post, method: :delete, confirm: "You shure?", class: "btn btn-danger" %>
      <% end %>
    </p><br />
  </div>
</div>