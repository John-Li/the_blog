<h1>Sign in</h1>
<br />
<%= form_for(:session, url: sessions_path) do |f| %>
	<div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.submit "Sign in"%>
  </div>
<% end %>

<h3>New user? <%= link_to "Sign up!", signup_path %></h3>
